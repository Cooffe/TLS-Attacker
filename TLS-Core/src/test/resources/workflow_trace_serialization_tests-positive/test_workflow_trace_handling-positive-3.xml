# Given this config:
<config>
    <defaultRunningMode>CLIENT</defaultRunningMode>
    <defaultClientConnection>
        <alias>client</alias>
        <port>443</port>
        <hostname>localhost</hostname>
        <timeout>1000</timeout>
        <transportHandlerType>TCP</transportHandlerType>
    </defaultClientConnection>
    <defaultServerConnection>
        <alias>server</alias>
        <port>443</port>
        <hostname>localhost</hostname>
        <timeout>1000</timeout>
        <transportHandlerType>TCP</transportHandlerType>
    </defaultServerConnection>
</config>

# And this input trace
<ta:workflowTrace xmlns:ta="http://nds.rub.de/tlsattacker" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Send>
        <messages>
            <ClientHello/>
        </messages>
    </Send>
</ta:workflowTrace>

# We expect this normalized trace
<ta:workflowTrace xmlns:ta="http://nds.rub.de/tlsattacker" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <OutboundConnection>
        <alias>client</alias>
        <port>443</port>
        <hostname>localhost</hostname>
        <timeout>1000</timeout>
        <transportHandlerType>TCP</transportHandlerType>
    </OutboundConnection>
    <Send>
        <connectionAlias>client</connectionAlias>
        <messages>
            <ClientHello/>
        </messages>
        <records/>
    </Send>
</ta:workflowTrace>

# And this after default filter application:
<ta:workflowTrace xmlns:ta="http://nds.rub.de/tlsattacker" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <Send>
        <messages>
            <ClientHello/>
        </messages>
    </Send>
</ta:workflowTrace>
